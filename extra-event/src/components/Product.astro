---
import '../components/product.scss'
import BotonCompra from '../components/botonCompra.astro'
---

<div class="contenedor">
    <div class="card mb-3 card-container">
        <div class="row g-0">
          <div class="col-md-4">
            <img src="/img/chamoy.jpg" class="img-fluid rounded-start" alt="...">
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h5 class="card-title">Chamoy XL</h5>
              <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. <br> This content is a little bit longer.</p>
              <input class="quantity" id="quantity" type="number" value="number">
              <p class="card-text"><small class="text-body-secondary">Last updated 3 mins ago</small></p>
              <BotonCompra amount="5000" name="Chamoy" description="Chamoy delicioso" />
            </div>
          </div>
        </div>
    </div>
</div>

<script>
    const quantityInput = document.querySelector('.quantity') as HTMLInputElement;
    
    if (quantityInput) {
        quantityInput.addEventListener('input', (e) => {
            const target = e.target as HTMLInputElement;
            console.log('Valor actual:', target.value);
        });
    }
</script>



  



